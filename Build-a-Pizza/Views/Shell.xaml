    <Controls:HamburgerMenu x:Name="MyHamburgerMenu" HamburgerBackground="#d23636" NavAreaBackground="#d23636">

        <Controls:HamburgerMenu.PrimaryButtons>
            <!--  mainpage button  -->
            <Controls:HamburgerButtonInfo PageType="views:CrustPage" ClearHistory="True">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Width="48" Height="48" Source="../Assets/BurgerIcons/crust_small.png" Stretch="Uniform"  />
                    <TextBlock Text="Crust" Margin="12, 0, 0, 0" VerticalAlignment="Center" />
                </StackPanel>
            </Controls:HamburgerButtonInfo>

            <Controls:HamburgerButtonInfo PageType="views:SaucePage" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Width="48" Height="48" Source="../Assets/BurgerIcons/sauce_small.png" Stretch="Uniform"  />
                    <TextBlock Text="Sauce" Margin="12, 0, 0, 0" VerticalAlignment="Center" />
                </StackPanel>
            </Controls:HamburgerButtonInfo>

            <Controls:HamburgerButtonInfo PageType="views:MeatPage" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Width="48" Height="48" Source="../Assets/BurgerIcons/meat_small.png" Stretch="Uniform"  />
                    <TextBlock Text="Meat" Margin="12, 0, 0, 0" VerticalAlignment="Center" />
                </StackPanel>
            </Controls:HamburgerButtonInfo>

            <Controls:HamburgerButtonInfo PageType="views:GreenPage" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Width="48" Height="48" Source="../Assets/BurgerIcons/tomato_small.png" Stretch="Uniform"  />
                    <TextBlock Text="Vegetables" Margin="12, 0, 0, 0" VerticalAlignment="Center" />
                </StackPanel>
            </Controls:HamburgerButtonInfo>

            <Controls:HamburgerButtonInfo PageType="views:CheesePage" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Width="48" Height="48" Source="../Assets/BurgerIcons/cheese_small.png" Stretch="Uniform"  />
                    <TextBlock Text="Cheese" Margin="12, 0, 0, 0" VerticalAlignment="Center" />
                </StackPanel>
            </Controls:HamburgerButtonInfo>

        </Controls:HamburgerMenu.PrimaryButtons>
        
        

        <Controls:HamburgerMenu.SecondaryButtons>
            <Controls:HamburgerButtonInfo PageType="views:DetailPage" IsEnabled="false">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="48" Height="48">
                        <Border BorderThickness="1" BorderBrush="White" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <TextBlock Text="108" IsColorFontEnabled="True"  TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="14" Margin="3,1" />
                        </Border>
                    </Border>
                    <TextBlock Text="Total Price:" Margin="12, 0, 0, 0" VerticalAlignment="Center" Foreground="White" />
                </StackPanel>
            </Controls:HamburgerButtonInfo>

            <!--  settingspage button  -->
            <Controls:HamburgerButtonInfo x:Name="SettingsButton" PageParameter="0" PageType="views:MainPage">
                <Controls:HamburgerButtonInfo.NavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </Controls:HamburgerButtonInfo.NavigationTransitionInfo>
                <StackPanel Orientation="Horizontal">
                    <Image Width="48" Height="48" Source="../Assets/BurgerIcons/cart_small.png" Stretch="Uniform"  />
                    <!--<SymbolIcon Symbol="AllApps"  Width="48" Height="48"  />-->
                    <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="Checkout" />
                </StackPanel>
            </Controls:HamburgerButtonInfo>
        </Controls:HamburgerMenu.SecondaryButtons>

    </Controls:HamburgerMenu>

